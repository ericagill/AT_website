---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";

import Buxted from "../Images/hospitality_projects/Buxted-park-hotel_project3.png";
import Viking from "../Images/hospitality_projects/Viking-cruise-ship_project1.png";
import POCruise from "../Images/hospitality_projects/PO-cruise_project4.png";
import Mandarin from "../Images/hospitality_projects/Mandarin-hotel-Lucerne_project2.png"
---

<Layout>
    <Navbar />
    <section class="project-type">
        <p >Hospitality Projects</p>
        <hr>
    </section>

    <section class = "residential-projects">
        <div class = "rows">
            <div class="container">
                <img src= {Viking.src} alt="Viking Cruise Ship hospitality project preview" class="image" width = "600px" height ="400px">
                <div class="overlay">
                    <div class = "text">Viking Cruise Ship</div>
                </div>
            </div>
            <div class="container">
                <img src= {Mandarin.src} alt="Mandarin hotel Lucerne hospitality project preview" class="image" width = "600px" height ="400px">
                <div class="overlay">
                    <div class = "text">Mandarin hotel Lucerne</div>
                </div>
            </div>
        </div>
        <div class = "rows">
            <div class="container">
                <img src={Buxted.src} alt="Buxted park hotel hospitality project preview" class="image" width = "600px" height ="400px">
                <div class="overlay">
                    <div class = "text">Buxted park hotel</div>
                </div>
            </div>

            <div class="container">
                <img src= {POCruise.src} alt="P&O cruise ship hospitality project preview" class="image" width = "600px" height ="400px">
                <div class="overlay">
                    <div class = "text">P&O cruise ship</div>
                </div>
            </div>
        </div>
    </section>
    <style>
        .project-type p {
            font-weight: 500;
            font-size: 1.5rem;
        }
        .project-type {
            display: flex;
            flex-direction: column;
            align-items: center;

        }

        .residential-projects {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;

        }

        .rows {
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: baseline;

        }

        .container {
            position: relative;
            width: 100%;

        }

        .image {
            padding: 20px
        }

        /* The overlay effect - lays on top of the container and over the image */
        .overlay {
            position: absolute;
            bottom: 0;
            background: rgba(255, 255, 255, 0.8); /* White see-through */
            color: #333;
            width: 100%;
            height: 100%;

            transition: .5s ease;
            opacity:0;
            font-size: 16px;
            text-align: center;
        }

        .text {
            color: #333;
            font-weight: bold;
            position:relative;
            top:50%;
        }

        /* When you mouse over the container, fade in the overlay title */
        .container:hover .overlay {
            opacity: 1;
        }

    </style>
</Layout>