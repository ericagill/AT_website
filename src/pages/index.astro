---
import Layout from "../layouts/Layout.astro";
import {Image}  from "astro:assets";
import Project_sample1 from "../Images/Project_sample1.png"
import Project_sample2 from "../Images/Project_sample2.png"


---
<Layout>
    <header>
        <nav class = "topnav">
            <p>Alessia <br> 
            Trevisan <br>
            Interior <br>
            Design <br>
            </p>
            <ul>
                <li><a href="#projects">Projects</a></li>
                <div class="dropdown-content">
                    <a href="#">Residential Projects</a>
                    <a href="#">Hospitality Projects</a>
                </div>
                <li><a href="#blog">Blog</a></li>
                <li><a href="#About">About</a></li>
                <li><a href="#Contact">Contact</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <section class="description">
            <article>
                <div class="bio">
                    <p>This is a brief description of the service and products you offer. <br> The type of design that makes you unique. <br> The experience that led you to here...<a href="#About">LEARN MORE</a></p>      
                </div>
            </article>
        </section>
        <section>
            <div class="projects" >
                <div class = "project-section">
                    <img src= {Project_sample1.src} width="500px" height="300px" alt ="hospitality project preview viking cruise ship">
                    <p>Hospitality projects</p>
                </div>
    
                <div class = "project-section">
                    <img src={Project_sample2.src} width="500px" height="300px" alt ="residential project preview london home hall" >
                    <p>Residential projects</p>
                </div>
    
            </div>
        </section>       
    </main>
    <style>
        header {
        /* The image used */
        background-image: url("../Images/Opening_project1.png");
    
        min-height: 800px;
    
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        position: relative;
        overflow: hidden;
    }
    
    .topnav {
        margin: 20px;
        width: auto;
    
        position: relative;
        display: flex;
        flex-direction: row;
        justify-content: flex-end;
    
    }
    
    .topnav p {
        color: #f2f2f2;
        font-size: 3rem;
    
        /* To aligh the nav links on the right */
        margin-left: 0;
        margin-right: auto;
    }
    
    
    .dropdown-content {
        display: none;
        z-index: 1;
    }
    
    .dropdown-content a {
        float: none;
        color: black;
        padding: 12px 16px;
        display: block;
        text-align: left;
      }
    
    /* Show the dropdown menu on hover */
    
    .topnav ul {
        display: flex;
        flex-direction: row;
        justify-content: flex-end;
    }
    
    .topnav li a {
        float: left;
        color: #f2f2f2;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 1.5rem;
    }
      
    .topnav li a:hover {
        color: black;
        text-decoration: underline;
    }
/* main description  section */

    .description {
    margin: 10%;

    font-size: 1rem;

    display: flex;
    flex-direction: column;
    justify-content: center;
}

    .bio p {
    text-align: center;
}

    .bio p a:hover{
    text-decoration: underline;
}
/* main projects section  */

    .projects{
    margin-bottom: 10%;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

    .project-section {
    padding: 10px;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

    .project-section p {
    margin: 5px;

    font-size: 1.5rem;
    color: var(--color-primary);

}

    </style>
</Layout>
