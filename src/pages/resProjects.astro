---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Notting_Hill from "../Images/residential_projects/Notting-Hill-project1.png"
import Clerkenwell_penthouse from "../Images/residential_projects/Clerkenwell-penthouse-project2.png"
import Lambeth from "../Images/residential_projects/Lambeth_Victorian_project4.png"
import South_Kensington from "../Images/residential_projects/South_Kensington_project3.png"
import London_residence from "../Images/residential_projects/London-private-residence_project5.png"
---

<Layout>
    <Navbar />

    <section class="project-type">
        <p >Residential Projects</p>
        <hr>
    </section>

    <section class = "residential-projects">
        <div class = "rows">
            <div class="container">
                <img src= {London_residence.src} alt="London private residence project preview" class="image" width = "600px" height ="400px">
                <div class="overlay">
                    <div class = "text">Private Residence London</div>
                </div>
            </div>
            <div class="container">
                <img src= {Notting_Hill.src} alt="Notting Hill project preview" class="image" width = "600px" height ="400px">
                <div class="overlay">
                    <div class = "text">Notting Hill Maisonette</div>
                </div>
            </div>
        </div>
        <div class = "rows">
            <div class="container">
                <img src={Lambeth.src} alt="Lambeth Victorian house project preview" class="image" width = "600px" height ="400px">
                <div class="overlay">
                    <div class = "text">Lambeth Victorian House</div>
                </div>
            </div>

            <div class="container">
                <img src= {Clerkenwell_penthouse.src} alt="Clerkenwell penthouse project preview" class="image" width = "600px" height ="400px">
                <div class="overlay">
                    <div class = "text">Clerkenwell Penthouse</div>
                </div>
            </div>
        </div>
        <div class = "rows">
            <div class="container">
                <img src={South_Kensington.src} alt="South Kensington apartment  project preview" class="image" width = "600px" height ="400px">
                <div class="overlay">
                    <div class = "text">South Kensington apartment</div>
                </div>
            </div>
        </div>
    </section>
    <style>
        .project-type p {
            font-weight: 500;
            font-size: 1.5rem;
        }
        .project-type {
            display: flex;
            flex-direction: column;
            align-items: center;

        }

        .residential-projects {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;

        }

        .rows {
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: baseline;

        }

        .container {
            position: relative;
            width: 100%;

        }

        .image {
            padding: 20px
        }

        /* The overlay effect - lays on top of the container and over the image */
        .overlay {
            position: absolute;
            bottom: 0;
            background: rgba(255, 255, 255, 0.8); /* White see-through */
            color: #333;
            width: 100%;
            height: 100%;

            transition: .5s ease;
            opacity:0;
            font-size: 16px;
            text-align: center;
        }

        .text {
            color: #333;
            font-weight: bold;
            position:relative;
            top:50%;
        }

        /* When you mouse over the container, fade in the overlay title */
        .container:hover .overlay {
            opacity: 1;
        }

    </style>
</Layout>
